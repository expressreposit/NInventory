@using Inventory.Repository.Paging;
@using Inventory.ViewModel.Bill;
@model List<BillTypeListViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>
<div class="row">
    <div class="col-6">
        Add New Bill Type
        <a asp-action="Create" class="btn btn-primary">Add</a>
    </div>
    <div class="col-6">Search Here...</div>
    <div class="row">
        <table class="table">
            <thead>
                <tr>
                    <th>Bill-Type Id</th>
                    <th>Title</th>
                    <th>Description</th>
                </tr>
            </thead>
            <tbody>
                @foreach(var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(m => item.BillTypeId)</td>
                        <td>@Html.DisplayFor(m => item.BillTypeName)</td>
                        <td>@Html.DisplayFor(m => item.Description)</td>
                        <td>
                            <a asp-route-id="@item.BillTypeId" asp-action="Edit" class="btn btn-primary">Edit</a>
                            <a asp-route-id="@item.BillTypeId" asp-action="Delete" class="btn btn-primary">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

